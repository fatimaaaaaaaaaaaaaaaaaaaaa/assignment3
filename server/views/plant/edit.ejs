<%- include ../partials/header %>
<%- include ../partials/main_nav %>
<!--edit page-->

<div class="contrainer">
    <div class="row"> 
        <div class="col-md-offset-3 col-md-6">
            <h1> <%= title %></h1> <br><br>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Plant Name </label>
                    <input type="text" class=form-control 
                    id="nameTextField"
                    placeholder="Enter the Plant Name"
                    name="name" 
                    value = "<%= plant.name %>"
                    required>
                </div>


                   
                 <div class="form-group">
                    <label for="ageTextField">Age of Plant </label>
                    <input type="text" class=form-control 
                    id="ageTextField"
                    placeholder="Enter Age of Plant"
                    name="age" 
                    value = "<%= plant.age %>"
                    required>
                </div>

                 <div class="form-group">
                    <label for="priceTextField">Price </label>
                    <input type="number" class=form-control 
                    id="priceTextField"
                    placeholder="Enter the Price "
                    name="price" 
                    value = "<%= plant.price %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="wateramtTextField">Water Amount </label>
                    <input type="text" class=form-control 
                    id="wateramtTextField"
                    placeholder="Enter Water Amount"
                    name="wateramt" 
                    value = "<%= plant.wateramt %>"
                    required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit"> 
                    <i class="fas fa-edit"> </i> Submit 
                </button>

                <a href="/plants" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel </a>
            </form>

        </div>
    </div> 
</div> 
<%- include ../partials/bottom_nav %>
<%- include ../partials/footer %>
